generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           String  @id @default(uuid())
  name         String?
  cpf          String? @unique
  rg           String? @unique
  email        String? @unique
  crm          String? @unique
  phone_number String  @unique

  solicitations Solicitations[]

  @@map("users")
}

model Solicitations {
  id       String    @id @default(uuid())
  user_id  String
  servico  String
  open     Boolean   @default(true)
  start_at DateTime  @default(now())
  end_at   DateTime?

  user Users @relation(fields: [user_id], references: [id])

  @@map("solicitations")
}
